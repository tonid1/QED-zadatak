@model IEnumerable<Qed.Models.Knjiga>

@{
    ViewBag.Title = "MojeKnjige";
}

<h2>Moje Knjige</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naslov)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naklada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumDodavanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bookirana)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naslov)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naklada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumDodavanja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bookirana)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
